@page
@model WebSuper.Pages.Usuarios.IndexModel
@{
    ViewData["Title"] = "Cadastro de Usuário";
}


<h1>@ViewData["Title"]</h1>

<p><a asp-page="Criar">Adicionar novo Usuário</a></p>

<table style="border-collapse: collapse; width: 100%;">
    <thead>
        <tr>
            <th style="border: 1px solid black; padding: 10px;">ID</th>
            <th style="border: 1px solid black; padding: 10px;">Nome</th>
            <th style="border: 1px solid black; padding: 10px;">E-mail</th>
            <th style="border: 1px solid black; padding: 10px;">Senha</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model.Usuarios)
        {
            <tr>
                <td style="border: 1px solid black; padding: 10px;">@usuario.Id</td>
                <td style="border: 1px solid black; padding: 10px;">@usuario.Nome</td>
                <td style="border: 1px solid black; padding: 10px;">@usuario.Email</td>
                <td style="border: 1px solid black; padding: 10px;">@usuario.Senha</td>
            </tr>
        }
    </tbody>
</table>